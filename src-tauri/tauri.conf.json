{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AmperZap",
  "version": "0.1.1",
  "identifier": "com.amperzap.app",

  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AmperZap",
        "width": 400,
        "height": 600,
        "theme": "Dark",
        "resizable": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https: wss:; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["assets/alert_sound.mp3", "icons/**/*"]
  }
}
